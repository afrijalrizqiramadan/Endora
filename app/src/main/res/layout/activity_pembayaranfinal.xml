<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/blue"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_pembarayan"
        android:orientation="vertical">

        <TextView
            android:layout_width="@dimen/_260sdp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            style="@style/textbold"
            android:layout_gravity="center"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_50sdp"
            android:text="Selamat Pesananmu telah berhasil dibuat"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="@dimen/_290sdp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Selesaikan pembayaran sebelum"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/tvExpired"
            android:layout_width="@dimen/_290sdp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/_14sdp"
            style="@style/textbold"
            android:textColor="@color/white"
            android:text="29 April 2021 19.00 WIB"
            android:gravity="center_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bg_roundwhite2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                android:id="@+id/layout_idpembelian"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/white">

                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:text="ID Pembelian" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    style="@style/textbold"
                    android:id="@+id/tv_idpembelian"
                    android:text="840182841804" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_novirtual"
                android:orientation="vertical"
                android:layout_below="@id/layout_idpembelian"
                android:paddingHorizontal="@dimen/_10sdp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:text="Nomor Virtual Account" />

                <TextView
                    android:id="@+id/tv_va"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    style="@style/textbold"
                    android:text="82309131231312313" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/layout_novirtual"
                android:padding="@dimen/_10sdp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:text="Jumlah Pembayaran" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    style="@style/textbold"
                    android:text="Rp.2.704.000" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_10sdp"
                style="@style/bluelink"
                android:id="@+id/btSalin"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="SALIN" />


        </RelativeLayout>


    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/_190sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        style="@style/btborderblue"
        android:id="@+id/btBeranda"
        android:text="Kembali Ke Beranda" />
</RelativeLayout>

