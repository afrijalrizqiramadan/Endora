<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="@dimen/dp_margin15"
        android:background="@color/red">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/textbold"
            android:textSize="@dimen/dp_font_size_normal"
            android:textColor="@color/white"
            android:text="@string/masuk_dulu"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/dp_margin15">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Jika sudah punya akun"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/blue"
            android:text="Masuk"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_margin20"
            android:text="Jika belum punya akun"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/blue"
            android:text="Daftar"/>

    </LinearLayout>
</LinearLayout>