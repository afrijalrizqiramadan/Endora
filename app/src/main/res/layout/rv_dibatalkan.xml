            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/icon_selesai"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_batal"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon_selesai"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blackgray"
                android:id="@+id/tv_nopesanan"
                android:text="No. Pesanan"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvNoPesanan"
                    android:textColor="@color/blackgray"
                    android:layout_toRightOf="@id/tv_nopesanan"
                    android:text="#12345678"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTanggalPemesanan"
                android:layout_below="@id/tv_nopesanan"
                android:text="139 832 038 012 380"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTanggalPemesanan"
                android:id="@+id/tvJumlahBarang"
                android:text="Rincian"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:padding="@dimen/_15sdp"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrowright" />
        </RelativeLayout>
