<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp_margin5">


        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:id="@+id/tvGambar"
            android:src="@drawable/contohgambar1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_margin10">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tvNamaPromo"
                android:layout_height="wrap_content"
                android:text="Promo brand 1"
                android:layout_margin="@dimen/_10sdp"
                android:textColor="@color/blackgray"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_below="@id/tvNamaPromo"
                android:textColor="@color/blue"
                android:id="@+id/tvDeskripsiPromo"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>
    <!--    <View-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="1dp"-->
    <!--        android:background="@color/graybackground"/>-->
</LinearLayout>
