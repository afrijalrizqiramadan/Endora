<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/bluetoggle</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#D3D3D3</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SCBSwitchWhite" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#D3D3D3</item>
    </style>

    <style name="DPSubHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackgray</item>
        <item name="android:textSize">@dimen/dp_font_size_medium</item>
    </style>

    <style name="TextAppearance.MyApp.CardHeader" parent="android:TextAppearance">
        <item name="android:textColor">@color/graybackground</item>
        <item name="android:textSize">14sp</item>
        <item name="fontPath">@string/dp_font_medium</item>
    </style>

    <style name="DPAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="DPButtonStyleStroked">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textSize">@dimen/dp_font_size_normal</item>
        <item name="android:textColor">@color/blackgray</item>
        <item name="android:textAppearance">@style/DPFontMedium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/bg_stroke</item>
    </style>
    <style name="DPButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textSize">@dimen/dp_font_size_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/DPFontMedium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>
    <style name="DPAppWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DPFontMedium">
        <item name="fontPath">@string/dp_font_medium</item>
    </style>

    <style name="DPFontSemiBold">
        <item name="fontPath">@string/dp_font_medium</item>
    </style>

    <style name="DPFontBold">
        <item name="fontPath">@string/dp_font_bold</item>
    </style>
    <style name="fontjelajah">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/dp_font_size_large</item>
    </style>

    <style name="DPCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/blackgray</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicator">@drawable/indicator_tab</item>
        <item name="tabMinWidth">@dimen/_100sdp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/DPcustomtexttab</item>
        <item name="tabSelectedTextColor">@color/blackgray</item>
    </style>

    <style name="DPcustomtexttab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/blackgray</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="DPtitletoolbar" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/dp_font_size_large</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/graybutton</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>

    <style name="btfillgreen">
        <item name="android:background">@drawable/bg_roundgreen</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="btfillblue">
        <item name="android:background">@drawable/bg_rounddarkblue</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="btbordergreen">
        <item name="android:background">@drawable/bg_bordergreen</item>
        <item name="android:textColor">@color/green</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="btborderblack">
        <item name="android:background">@drawable/bg_borderblack</item>
        <item name="android:textColor">@color/blackgray</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="btborderblue">
        <item name="android:background">@drawable/bg_borderblue</item>
        <item name="android:textColor">@color/blue</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="btfillred">
        <item name="android:background">@drawable/bg_roundred</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/dp_font_size_small</item>
    </style>

    <style name="btred">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/red</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/dp_font_size_small</item>
    </style>

    <style name="btblack">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/blackgray</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/dp_font_size_small</item>
    </style>

    <style name="textbold">
        <item name="android:textColor">@color/blackgray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bluelink">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Widget.RadioButton.CheckMark" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/blackgray</item>
        <item name="android:button">@color/white</item>
        <item name="android:background">@color/blackgray</item>
    </style>

</resources>